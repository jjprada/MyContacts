<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.jjprada.mycontacts.ContactViewActivity">

    <RelativeLayout
        android:id="@+id/contact_view_header"
        android:layout_width="match_parent"
        android:layout_height="200dp">
            <ImageView
                android:id="@+id/contact_view_image"
                android:src="@drawable/sunset"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/contact_view_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/vertical_small_margin"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@android:color/white"
                android:text="JosÃ© Prada"/>
    </RelativeLayout>
    
    <android.support.v7.widget.Toolbar
        android:id="@+id/contact_view_toolbar"
        android:background="@color/primary"
        android:layout_width="match_parent"
        android:layout_height="56dp"></android.support.v7.widget.Toolbar>

</RelativeLayout>
